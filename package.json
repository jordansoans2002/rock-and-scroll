{
  "name": "rock-and-scroll",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.21.0",
  "scripts": {
    "dev:frontend": "pnpm --filter=@rock-and-scroll/shared dev && pnpm --filter=rock-and-scroll-frontend dev",
    "dev:backend": "pnpm --filter=@rock-and-scroll/shared dev && pnpm --filter=rock-and-scroll-backend dev",
    "dev:all": "pnpm --filter=@rock-and-scroll/shared dev && pnpm --parallel --filter=rock-and-scroll-frontend --filter=rock-and-scroll-backend dev",

    "build:shared": "pnpm --filter=@rock-and-scroll/shared build",
    "build:frontend": "pnpm -r --filter=@rock-and-scroll/shared build && pnpm -r --filter=rock-and-scroll-frontend build",    
    "build:backend": "pnpm -r --filter=@rock-and-scroll/shared build && pnpm -r --filter=rock-and-scroll-backend build",
    "build:all": "pnpm -r --filter=@rock-and-scroll/shared build && pnpm -r --filter=rock-and-scroll-frontend build && pnpm -r --filter=rock-and-scroll-backend build",

    "start:backend": "pnpm --filter=rock-and-scroll-backend start",
    "clean": "pnpm --recursive exec rm -rf dist node_modules"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}